@using Internet_banking.Core.Application.ViewModels.TypeAccount;
@using Internet_banking.Core.Application.ViewModels.Products;
@model SaveProductVM


@{
    ViewData["Title"] = "Añadir Producto";
}

<div class="container">
    <form method="post" asp-controller="Product" asp-action="CreateClientWithProduct">
        <div class="row d-flex">
            <div class="col-12 flex-column">
                <div class="form-group">
                    <label asp-for="Amount">Monto Inicial del producto</label>
                    <input asp-for="Amount" class="form-control border-1 border-dark" />
                    <span asp-validation-for="Amount" class="text-danger fw-bolder"></span>
                </div>
                <div class="form-group">
                    <select class="form-select" >
                        @foreach (TypeAccountVM item in ViewBag.typesAccount)
                        {
                            <option class="dropdown-item" value="@item.Id">@item.Title</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Añadir producto</button>
                </div>
                <input hidden value="@Model.IdClient" />
            </div>
        </div>
    </form>
</div>