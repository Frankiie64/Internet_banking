@using Internet_banking.Core.Application.ViewModels.Clients.Beneficiary
@model SaveBeneficiaryVM
@{
    ViewData["Title"] = "Eliminar Beneficiary";

    //Model.UserId = ViewBag.UserId;
}



<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Estas seguro que desea eliminar este Beneficiary?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Beneficiary" asp-action="DeleteBeneficiary">
                    <div class="form-group">
                    </div>
                    <input type="hidden" asp-for="Id" />
@*                    <input type="hidden" asp-for="FriendId" />
*@
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-controller="Beneficiary" asp-action="Index" class="btn btn-success">Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>
